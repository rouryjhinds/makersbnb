<body>
  <h1> Here are our available spaces </h1>
  <h2> Please choose where you would like to stay </h2>


<div  class="container">
  <% @space.each do |space| %>
    <form action="/booking/confirmation" method="get">
      <p><%= space.name %></p>
      <img src="//placehold.it/800x600&text=Hotel">
      <p><%= space.description %></p>
      <p><b>Price per night:</b> Â£<%= space.price %></p>
      <p><input type="submit" id="button" value="Request space" /></p>
    </form>
  <% end %>
</div>
</body>
</html>